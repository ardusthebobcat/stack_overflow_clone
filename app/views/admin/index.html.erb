<h1>Admin Page for <%= @admin.full_name %></h1>

<%= link_to "Add Post", new_post_path, class: "btn btn-primary" %>

<div class="row">
  <div class="col-md-6">
    <h3>All Users</h3>
    <% @users.each do |user| %>
      <div class="row">
        <h5><%= user.full_name %> <%= link_to "Delete User", user_path(user), data: {confirm: "Delete #{user.full_name}?", method: "delete"} %></h5>
        <h5><%= user.email %></h5>
        <h5>Member Since: <%= user.created_at.to_date.to_formatted_s(:long_ordinal) %></h5>
        <% if user.admin? %>
          <h5><%= link_to "Remove Adminship", user_path(user), data: {method: "patch", confirm: "Are you sure you want #{user.full_name} to be an admin?"} %></h5>
        <% else %>
          <h5><%= link_to "Make Admin", user_path(user), data: {method: "patch", confirm: "Are you sure you want #{user.full_name} to be an admin?"} %></h5>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <h3>All posts and answers.</h3>
    <% @posts.each do |post| %>
      <div class="row">
        <h5><%= post.question %> <%= link_to "Delete Post", post_path(post), data: {confirm: "Delete Post and all of it's Answers?", method: "delete"} %></h5>
        <h5>Answers:</h5>
        <ul>
          <% post.answers.each do |answer| %>
            <li><%= answer.description %> <%= link_to "Delete Answer", post_answer_path(post, answer), data: {confirm: "Delete Answer?", method: "delete"} %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
