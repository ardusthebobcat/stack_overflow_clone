<h1>Welcome to Stack Overflow</h1>

<%= link_to "Add Post", new_post_path, class: "btn btn-primary" %>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6">
      <h3><%= link_to "#{post.question}", post_path(post) %></h3>
      <h5>Asked By: <%= post.user.full_name %></h5>
    </div>
  <% end %>
</div>
